{
  "description": "Ysicing Debian Stretch base box",
  "variables": {
    "version": "9.7.0.{{timestamp}}",
    "box_version": "9.7.0",
    "box_changelog": "* new point release",
    "cloud_token": "{{ env `ATLAS_TOKEN` }}"
  },
  "builders": [
    {
      "boot_command": [
        "<esc><wait>",
        "install <wait>",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg <wait>",
        "debian-installer=en_US.UTF-8 <wait>",
        "auto <wait>",
        "locale=en_US.UTF-8 <wait>",
        "kbd-chooser/method=us <wait>",
        "keyboard-configuration/xkb-keymap=us <wait>",
        "netcfg/get_hostname={{ .Name }} <wait>",
        "netcfg/get_domain=localdomain <wait>",
        "fb=false <wait>",
        "debconf/frontend=noninteractive <wait>",
        "console-setup/ask_detect=false <wait>",
        "console-keymaps-at/keymap=us <wait>",
        "net.ifnames=0 <wait>",
        "grub-installer/bootdev=/dev/sda <wait>",
        "<enter><wait>"
      ],
      "boot_wait": "5s",
      "disk_size": 81920,
      "guest_os_type": "Debian_64",
      "headless": true,
      "http_directory": "http",
      "iso_urls": [
        "iso/debian.iso",
        "https://cdimage.debian.org/debian-cd/current/amd64/iso-cd/debian.iso"
      ],
      "iso_checksum_type": "sha256",
      "iso_checksum": "xxxx_xxxx",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "type": "virtualbox-iso",
      "shutdown_command": "echo 'vagrant'|sudo -S shutdown -P now",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "k8s-debian-9-amd64",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "4096"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "2"
        ]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "pause_before": "5s",
      "execute_command": "echo 'vagrant'| {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "environment_vars": [
         "VAGRANT_BUILDER_FS=/"
      ],
      "scripts": [
        "scripts/vagrant-setup.sh",
        "scripts/minimize.sh"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "output": "builds/{{.Provider}}-debian9.box",
        "vagrantfile_template": "vagrantfile.tpl",
        "type": "vagrant"
      },{
        "type": "vagrant-cloud",
        "box_tag": "ysicing/debian",
        "access_token": "{{user `cloud_token`}}",
        "version": "{{user `version`}}"
      }
    ]
  ]
}