{
  "description": "Ysicing Debian Stretch base box",
  "variables": {
    "version": "9.11.0.{{timestamp}}",
    "box_version": "9.11.0",
    "box_changelog": "* new point release",
    "cloud_token": "{{ env `ATLAS_TOKEN` }}"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "name": "debian-9-amd64",
      "vm_name": "debian-9-amd64",
      "output_directory": "output/debian-9-amd64",
      "boot_wait": "20s",
      "boot_command": [
        "<esc><wait>",
        "auto ",
        "ipv6.disable_ipv6=1 net.ifnames=0 biosdevname=0 preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",        
        "<enter>"
      ],
      "disk_size": 81920,
      "cpus": 2,
      "memory": 2048,
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--vram",
          "64"
        ]
      ],
      "guest_os_type": "Debian_64",
      "http_directory": "http",
      "headless": true,
      "vrdp_bind_address": "127.0.0.1",
      "vrdp_port_min": 11000,
      "vrdp_port_max": 12000,
      "iso_urls": [
        "iso/debian.iso",
        "https://cdimage.debian.org/cdimage/archive/9.11.0/amd64/iso-cd/debian-9.11.0-amd64-netinst.iso"
      ],
      "iso_checksum_type": "sha256",
      "iso_checksum": "xxxx_xxxx",
      "ssh_username": "root",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "3600s",
      "shutdown_command": "echo 'vagrant'|sudo -S shutdown -P now",
      "guest_additions_url": "https://download.virtualbox.org/virtualbox/5.2.34/VBoxGuestAdditions_5.2.34.iso",
      "guest_additions_sha256": "d1b63891abca37fd78f5c8af1764e10e5754b1eecabd1fcfe7599c29a93ba007",
      "guest_additions_path": "VBoxGuestAdditions.iso",
      "virtualbox_version_file": "VBoxVersion.txt"      
    }
  ],
  "provisioners": [
    {
      "scripts": [
          "scripts/debian9/apt.sh",
          "scripts/debian9/network.sh"
          ],
          "type": "shell",
          "start_retry_timeout": "15m",
          "expect_disconnect": "true"
    },
    {
      "scripts": [
          "scripts/debian9/floppy.sh",
          "scripts/debian9/profile.sh",
          "scripts/debian9/vagrant.sh",
          "scripts/debian9/motd.sh",
          "scripts/debian9/fixtty.sh",
          "scripts/debian9/virtualbox.sh",
          "scripts/debian9/parallels.sh",
          "scripts/debian9/vmware.sh",
          "scripts/debian9/qemu.sh"
          ],
          "type": "shell",
          "pause_before": "120s",
          "start_retry_timeout": "15m",
          "expect_disconnect": "true"
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "compression_level": 9,
        "keep_input_artifact": false,
        "vagrantfile_template": "tpl/vagrantfile.rb",
        "output": "builds/{{.Provider}}-debian.{{user `box_version`}}.box",
        "include": [
            "tpl/author.json"
        ]
      }
    ]
  ]
}