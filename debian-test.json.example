{
  "description": "Ysicing Debian testing base box",
  "variables": {
    "version": "testing.{{timestamp}}",
    "box_version": "testing",
    "box_changelog": "* new point release",
    "cloud_token": "{{ env `ATLAS_TOKEN` }}"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "name": "debian-testing-amd64",
      "vm_name": "debian-testing-amd64",
      "output_directory": "output/debian-testing-amd64-virtualbox",
      "boot_wait": "20s",
      "boot_command": [
        "<esc><wait>",
        "auto ",
        "ipv6.disable_ipv6=1 net.ifnames=0 biosdevname=0 preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",        
        "<enter>"
      ],
      "disk_size": 81920,
      "cpus": 2,
      "memory": 2048,
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--vram",
          "64"
        ]
      ],
      "guest_os_type": "Debian_64",
      "http_directory": "http",
      "headless": true,
      "vrdp_bind_address": "127.0.0.1",
      "vrdp_port_min": 11000,
      "vrdp_port_max": 12000,
      "iso_urls": [
        "iso/debian.iso",
        "iso/debian-testing-amd64-netinst.iso",
        "https://mirrors.ustc.edu.cn/debian-cdimage/weekly-builds/amd64/iso-cd/debian-testing-amd64-netinst.iso"
      ],
      "iso_checksum_type": "sha256",
      "iso_checksum": "xxxx_xxxx",
      "ssh_username": "root",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "3600s",
      "shutdown_command": "echo 'vagrant'|sudo -S shutdown -P now",
      "guest_additions_url": "http://download.virtualbox.org/virtualbox/5.1.38/VBoxGuestAdditions_5.1.38.iso",
      "guest_additions_sha256": "0e7ee2c78ebf7cd0d3a933d51148bef04a64f64fb27ccf70d59cddf9ca1e517a",
      "guest_additions_path": "VBoxGuestAdditions.iso",
      "guest_additions_mode": "upload",
      "virtualbox_version_file": "VBoxVersion.txt"      
    }
  ],
  "provisioners": [
    {
      "scripts": [
          "scripts/debian-testing/apt.sh",
          "scripts/debian-testing/network.sh"
          ],
          "type": "shell",
          "start_retry_timeout": "15m",
          "expect_disconnect": "true"
    },
    {
      "scripts": [
          "scripts/debian-testing/floppy.sh",
          "scripts/debian-testing/profile.sh",
          "scripts/debian-testing/vagrant.sh",
          "scripts/debian-testing/motd.sh",
          "scripts/debian-testing/fixtty.sh",
          "scripts/debian-testing/virtualbox.sh"
          ],
          "type": "shell",
          "pause_before": "120s",
          "start_retry_timeout": "15m",
          "expect_disconnect": "true"
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "compression_level": 9,
        "keep_input_artifact": false,
        "vagrantfile_template": "tpl/vagrantfile.rb",
        "output": "builds/{{.Provider}}-debian.{{user `box_version`}}.box",
        "include": [
            "tpl/author.json"
        ]
      }
    ]
  ]
}
